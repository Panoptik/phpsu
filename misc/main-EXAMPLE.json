

{


    /**
     * global site settings
     */

    "site": {

        // block prefetch requests
        "block_prefetch_requests": true,

        // default language
        "default_language": "ru",

        // default timezone
        "default_time_zone": "+04:00"

    },


    /**
     * system settings of application
     */

    "system": {


        /**
         * debug mode for developers
         * this option show very verbosity trace of application events
         */

        "debug_mode": true,

        // write logs of application (members) events
        "write_log": true,

        // max size of separated log file
        "log_file_max_size": 16384,

        // default output context
        "default_output_context": "html",


        /**
         * session storage handler types:
         *
         * database          - database session storage
         * all other values  - native PHP core session storage
         */

        "session_handler": "database",


        /**
         * names of session and cookies
         * note: for compatibility set only alphabetic symbols
         */

        "session_name" : "phpsu",
        "cookie_name"  : "phpsumember",

        "cookie_expires_time": 94608000 // 3 years

    },


    /**
     * Database connections settings
     *
     * Connection types:
     *
     * single - global single connection
     * slave  - slave connection
     * master - global master connection
     *
     * WARNING!
     *
     * 1) Application will be used only one (last declared) master connection
     * 2) Application will be used only one (last declared) single connection
     * 3) Single connection has a higher priority over others
     */

    "db": {

        "host"    : "localhost",
        "port"    : 3306,
        "dbname"  : "phpsu",
        "user"    : "phpsu",
        "pass"    : "phpsu",
        "charset" : "utf8"

    }


}


